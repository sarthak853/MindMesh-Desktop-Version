{
  "name": "mindmesh-ai-learning-platform",
  "version": "1.0.0",
  "description": "AI-powered learning platform with cognitive mapping, flashcards, and intelligent chat - Desktop App",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "build": {
    "appId": "com.mindmesh.desktop",
    "productName": "MindMesh",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "natural": "^8.1.0",
    "pdf2json": "^4.0.0",
    "sqlite3": "^5.1.6"
  }
}
